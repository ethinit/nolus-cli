{
  "compilerOptions": {
    "strict": false,
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "moduleResolution": "node",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": false,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}